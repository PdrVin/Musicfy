@using Application.DTOs

@model MusicDto
@{
    ViewData["Title"] = "Cadastrar Música";
}

<div class="text-center">
    <h2 class="display-4">Cadastrar Música</h2>
</div>

<form asp-controller="Music" asp-action="Create" method="post">
    <div class="mb-3 bg-dark">
        <label for="name" class="form-label">Título da Música</label>
        <input type="text" asp-for="Title" class="form-control bg-body text-white"
            placeholder="Digite o Título da Música">
        @Html.ValidationMessageFor(x => x.Title)
    </div>

    <div class="mb-3 bg-dark">
        <label for="releaseDate" class="form-label">Duração</label>
        <input type="time" asp-for="Duration" class="form-control bg-body text-white"
            placeholder="Digite a Duração da Música">
        @Html.ValidationMessageFor(x => x.Duration)
    </div>

    <div class="mb-3 bg-dark">
        <label for="name" class="form-label">Título do Álbum</label>
        <input type="text" asp-for="AlbumTitle" class="form-control bg-body text-white"
            placeholder="Digite o Título do Álbum">
        @Html.ValidationMessageFor(x => x.AlbumTitle)
    </div>

    <div class="mb-3 bg-dark">
        <label for="name" class="form-label">Artista do Álbum</label>
        <input type="text" asp-for="ArtistName" class="form-control bg-body text-white"
            placeholder="Digite o Artista do Álbum">
        @Html.ValidationMessageFor(x => x.ArtistName)
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" role="button" asp-controller="Artist" asp-action="Index">Voltar</a>
</form>